def build(bld):
    bld.recurse(['lexer', 'parser'])
    sources = ['all_tests.c']
    bld(features = 'c cprogram',
        source = sources,
        includes = [bld.env.INCLUDE_SRC, bld.env.INCLUDE_CUTEST],
        target = 'run_all_tests',
        use = ['lexer_tests', 'parser_tests', 'cutest'])

